<div class="container">
  <div class="form card">
    <div class="row">

      <div class="col-xs-12 col-md-offset-3 col-md-6">
        <%= simple_form_for [@cocktail, @dose] do |f| %>
          <%= f.input :ingredient_id , collection: Ingredient.all %>
